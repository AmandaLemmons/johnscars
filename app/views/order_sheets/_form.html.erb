           <td class="col-md-4">AC Compressor & mounting kit </td>
           <td class="col-md-4">$450.00 </td>
           <td class="col-md-4"><%= f.collection_radio_buttons :ac_compressor_mount_kit, [[true, 'Yes'], [false, 'No']], :first, :last %> </td>
         </tr>
         <tr>
           <td class="col-md-4">AC Hose Kit (factory AC '77-78) </td>
           <td class="col-md-4">$200.00 </td>
           <td class="col-md-4"><%= f.collection_radio_buttons :ac_hose_kit, [[true, 'Yes'], [false, 'No']], :first, :last %> </td>
         </tr>
         <tr>
           <td class="col-md-4">High Volume fuel pump </td>
           <td class="col-md-4">$175.00 </td>
           <td class="col-md-4"><%= f.collection_radio_buttons :high_volume, [[true, 'Yes'], [false, 'No']], :first, :last%> </td>
         </tr>
         <tr>
           <td class="col-md-4">Are you a Texas Resident? </td>
           <td class="col-md-4"> Sales Tax -- 8.25% </td>
           <td class="col-md-4"> <%= f.collection_radio_buttons :texas_resident, [[true, 'Yes'], [false, 'No']], :first, :last%> </td>
         </tr>
       </tbody>
     </table>

