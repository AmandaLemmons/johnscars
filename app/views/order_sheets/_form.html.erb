           <td class="col-md-4">$345.oo </td>
           <td class="col-md-4"><%= f.collection_radio_buttons :speedometer, [[true, 'Yes'], [false, 'No']], :first, :last %> </td>
         </tr>
         <tr>
           <td class="col-md-4">Vital Liquids set </td>
           <td class="col-md-4">$105.00 </td>
           <td class="col-md-4"><%= f.collection_radio_buttons :vital_liquids, [[true, 'Yes'], [false, 'No']], :first, :last %> </td>
         </tr>
         <tr>
           <td class="col-md-4">Header Set (NOT California) </td>
           <td class="col-md-4">$385.00 </td>
           <td class="col-md-4"><%= f.collection_radio_buttons :header_set, [[true, 'Yes'], [false, 'No']], :first, :last %> </td>
         </tr>
