         <%= f.input :zcar_year, label: false, placeholder:"Year",  collection: ["1970", "1971", "1972", "1973", "1974", "1975", "1976", "1977", "1978",]%>
       </div>
       <div class="col-md-3">
         <h4>Model </h4>
         <%=f.input :zcar_type , label: false,  placeholder:"",  priority: [ "240" ], collection: [ "240", "260", "280", "This kit doesn't fit a 280ZX"] %>
      </div>
     <div class="col-md-3">
       <p>Is this a '2+2'</p>
       <%= f.collection_radio_buttons :zcar_type2, [[true, 'Yes'], [false, 'No']], :first, :last%>
     </div>
     <div class="col-md-3">
       <h4>VIN NUMBER </h4>
       <%= f.input :zcar_vin, label: false, placeholder:"Window pillar in front of driver's door"%>
     </div>
     <div class="col-md-3">
          <h4>Month Built </h4>
          <%= f.input :zcar_month_built, label: false, placeholder:"Month Built", collection: ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"]
          %>
      </div>
     <div class="col-md-3">
          <h4>Year Built </h4>
          <%= f.input :zcar_year_built, label: false, collection: ["1970", "1971", "1972", "1973", "1974", "1975", "1976", "1977", "1978", "1979"]%>
      </div>
   </div row>
 </div>

   <div class="panel panel-default">
