        <td class="col-xs-4"><%= f.collection_radio_buttons :torque_converter, [[true, 'Yes'], [false, 'No']], :first, :last %> </td>
      </tr>
      <tr>
        <td class="col-xs-4">Credit  (Non-illustrated or Repeat Kits) <br> <small>* Price is Required (if no credit put "0")</small></td>
        <td class="col-xs-4">Price<%= f.input :credit_amt, label: false, placeholder:"Required, must be a positive number" %> </td>
        <td class="col-xs-4"> Credit Description <%= f.input :credit_description, label: false, placeholder:"Required, must be a positive number" %></td>
      </tr>
      <tr>
        <td class="col-xs-4">Are you a Texas Resident? </td>
        <td class="col-xs-4"> Add Sales Tax -- 8.25% </td>
        <td class="col-xs-4"> </td>
      </tr>
