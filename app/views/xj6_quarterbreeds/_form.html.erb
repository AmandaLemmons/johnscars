        <td class="col-xs-4"><%= f.collection_radio_buttons :driveshaft, [[true, 'Yes'], [false, 'No']], :first, :last %> </td>
      </tr>
      <tr>
        <td class="col-xs-4">Torque Converter Lockup Kit </td>
