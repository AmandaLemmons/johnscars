    <tbody>
      <tr>
        <td>CAR OWNER INFORMATION </td>
      </tr>
      <tr>
        <td><em>Name: </em> <b><%= @mark_quarterbreed.car_owner_full_name %></b> </td>
      </tr>
      <tr>
        <td><em>Address: </em> <b> <%= @mark_quarterbreed.car_owner_address %> <br> <%= @mark_quarterbreed.car_owner_city %>,
          <% if @mark_quarterbreed.car_owner_state == "None" %>
          </b><%= @mark_quarterbreed.car_owner_zip %>   <%= @mark_quarterbreed.car_owner_countr %>
          <% else %>
          <%= @mark_quarterbreed.car_owner_state %>  </b><%= @mark_quarterbreed.car_owner_zip %>,   <%= @mark_quarterbreed.car_owner_countr %></b>
          <% end %>
        </td>
      </tr>
      <tr>
        <td><em>Email: </em> <b><%= @mark_quarterbreed.car_owner_email %></b> </td>
      </tr>
      <tr>
        <td><em>Home Phone: </em> <b>   <%= @mark_quarterbreed.car_owner_home_phone %> <em>From:</em>  <b><%= @mark_quarterbreed.car_owner_home_hours %> </b></td>
