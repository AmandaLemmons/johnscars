        <td class="col-xs-4"> <%= f.collection_radio_buttons :starter, [[true, 'Yes'], [false, 'No']], :first, :last %></td>
      </tr>
      <tr>
        <td class="col-xs-4">Oil Flter Spin-on Setup </td>
        <td class="col-xs-4"> $175.00</td>
        <td class="col-xs-4"> <%= f.collection_radio_buttons :oil_filter, [[true, 'Yes'], [false, 'No']], :first, :last %></td>
      </tr>
      <tr>
        <td class="col-xs-4">Trans Oil Cooler </td>
        <td class="col-xs-4"> $66.00</td>
        <td class="col-xs-4"> <%= f.collection_radio_buttons :trans_oil_cooler, [[true, 'Yes'], [false, 'No']], :first, :last %></td>
      </tr>
      <tr>
        <td class="col-xs-4">Credit  (Non-illustrated or Repeat Kits)</td>
        <td class="col-xs-4"><p> Price </p><%= f.input :credit_amt, label: false, placeholder:"Required, must be a positive number" %> </td>
        <td class="col-xs-4"> </p> Description </p> <%= f.input :credit_description, label: false, placeholder:"Required, must be a positive number" %></td>
      </tr>
      <tr>
        <td class="col-xs-4">Are you a Texas Resident? </td>
        <td class="col-xs-4"> Add Sales Tax -- 8.25% </td>
        <td class="col-xs-4"> </td>
      </tr>
      <!-- <tr>
        <td class="col-xs-4">Hawaii or Expedite </td>
        <td class="col-xs-4"> (Overnite or 2 day) </td>
        <td class="col-xs-4">  f.collection_radio_buttons :freight, [[true, 'Yes'], [false, 'No']], :first, :last </td>
      </tr> -->
    </tbody>
  </table>
</div>
<br clear="all">


