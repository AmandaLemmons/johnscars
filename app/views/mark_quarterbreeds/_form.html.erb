       <h4> Year</h4>
       <%= f.input :mark_quarterbreeds_gm_trans_year, label: false, placeholder: "Year"%>
    </div>
    <div class="col-xs-4">
      <h4> 3 Pipe Plugs on right side of case?</h4>
      <%= f.collection_radio_buttons :pipe_plugs, [[true, 'Yes'], [false, 'No']], :first, :last%>
   </div>
   </div row>

 <h3 class="text-center"> MONIES </h3>
  <table class="table table-bordered">
    <tbody>
      <td class="col-xs-4"> Mark Quarterbreed Kit </td>
      <td class="col-xs-4">$895.00   </td>
      <td class="col-xs-4"><strong><%= f.input :mark_quarterbreeds_kit, label: false,  collection: ["Yes", "No, I already bought this", "Not JCI car parts"]%></strong></td>
      <tr>
        <td class="col-xs-4">New Angle Drive & Speedo Cable </td>
        <td class="col-xs-4"> $150.00 </td>
        <td class="col-xs-4"><%= f.collection_radio_buttons :new_angle_drive, [[true, 'Yes'], [false, 'No']], :first, :last %> </td>
      </tr>
      <tr>
        <td class="col-xs-4">Driveshaft </td>
        <td class="col-xs-4"> $245.00 </td>
        <td class="col-xs-4"><%= f.collection_radio_buttons :mark_quarterbreeds_driveshaft, [[true, 'Yes'], [false, 'No']], :first, :last %> </td>
      </tr>
      <tr>
        <td class="col-xs-4">Electrolock TC Lockup Kit </td>
        <td class="col-xs-4"> $115.00 </td>
        <td class="col-xs-4"><%= f.collection_radio_buttons :mark_quarterbreeds_electrolock, [[true, 'Yes'], [false, 'No']], :first, :last %> </td>
      </tr>
      <tr>
        <td class="col-xs-4">Starter - "New" gear drive</td>
