<div class="hidden-print">
  <%= link_to "Edit", edit_quarterbreed_path(@quarterbreed.id) %>
</div>

<h3 class="center"> JCI V12 QUARTERBREED KIT ORDER SHEET </h3>
<div class="col-xs-12 printable-table">
  <% if @quarterbreed.same_information == false || nil  %>
  <table class="table table-bordered ">
    <tbody>
      <tr>
        <td>CAR OWNER INFORMATION </td>
        <td>SHOP OR "SHIP TO" INFORMATION  </td>
      </tr>
      <tr>
        <td ><em>Name: </em><b><%= @quarterbreed.car_owner_full_name %></b> </td>
        <td> <em>Name: </em><b><%= @quarterbreed.ship_to_full_name %></b> </td>
      </tr>
      <tr>
        <td><em>Address: </em><b> <%= @quarterbreed.car_owner_address %> <br> <%= @quarterbreed.car_owner_city %>,
          <% if @quarterbreed.car_owner_state == "None" %>
          <%= @quarterbreed.car_owner_zip %>   <%= @quarterbreed.car_owner_countr %></b>
          <% else %>
          <%= @quarterbreed.car_owner_state %> <%= @quarterbreed.car_owner_zip %>,   <%= @quarterbreed.car_owner_countr %></b>
          <% end %>
        </td>
        <td><em>Address: </em><b> <%= @quarterbreed.ship_to_address %> <br> <%= @quarterbreed.ship_to_city %>,
          <% if @quarterbreed.ship_to_state == "None" %>
        <%= @quarterbreed.ship_to_zip %>   <%= @quarterbreed.ship_to_countr %></b>
          <% else %>
          <%= @quarterbreed.ship_to_state %> <%= @quarterbreed.ship_to_zip %>,   <%= @quarterbreed.ship_to_countr %></b>
          <% end %>
        </td>
      </tr>
      <tr>
        <td><em>Email: </em> <b><%= @quarterbreed.car_owner_email %></b></td>
        <td><em>Email: </em> <b><%= @quarterbreed.ship_to_email %></b></td>
      </tr>
      <tr>
        <td><em> Home Phone: </em><b> <%= @quarterbreed.car_owner_home_phone.insert(3, '-').insert(7, '-')  %></b> <em>From: </em><b>  <%= @quarterbreed.car_owner_home_hours %></b> </td>
        <td> <em> Shop Phone: </em><b><%= @quarterbreed.ship_to_phone.insert(3, '-').insert(7, '-')  %></b> </td>
      </tr>
      <tr>
        <td> <em>Work Phone: </em><b><%= @quarterbreed.car_owner_work_phone.insert(3, '-').insert(7, '-')  %></b> <em>From: </em><b> <%= @quarterbreed.car_owner_work_hours%></b> </td>
        <td><em>Fax: </em><b> <%= @quarterbreed.ship_to_fax.insert(3, '-').insert(7, '-')  %></b> </td>
      </tr>
      <tr>
        <td> <em> Fax: </em><b> <%= @quarterbreed.car_owner_fax.insert(3, '-').insert(7, '-')  %> </b> <em>From: </em> <b> <%= @quarterbreed.car_owner_fax_hours %></b></td>
          <td><em>How did you find us? </em><b> <%= @quarterbreed.car_owner_find_us %> </b> <em> -- </em><b> <%= @quarterbreed.car_owner_where_find_us %></b></td>
      </tr>
    </tbody>
  </table>
  <% else %>
  <table class="table table-bordered ">
    <tbody>
      <tr>
        <td>CAR OWNER INFORMATION </td>
      </tr>
      <tr>
        <td><em>Name: </em> <b><%= @quarterbreed.car_owner_full_name %></b> </td>
      </tr>
      <tr>
        <td><em>Address: </em> <b> <%= @quarterbreed.car_owner_address %> <br> <%= @quarterbreed.car_owner_city %>,
          <% if @quarterbreed.car_owner_state == "None" %>
          <%= @quarterbreed.car_owner_zip %>   <%= @quarterbreed.car_owner_countr %></b>
          <% else %>
          <%= @quarterbreed.car_owner_state %> <%= @quarterbreed.car_owner_zip %>,   <%= @quarterbreed.car_owner_countr %></b>
          <% end %>
        </td>
      </tr>
      <tr>
        <td><em>Email: </em> <b><%= @quarterbreed.car_owner_email %></b> </td>
      </tr>
      <tr>
        <td><em>Home Phone: </em> <b>   <%= @quarterbreed.car_owner_home_phone.insert(3, '-').insert(7, '-')  %> </b> <em>From:</em>  <b><%= @quarterbreed.car_owner_home_hours %> </b></td>
      </tr>
      <tr>
        <td> <em>Work Phone: </em> <b><%= @quarterbreed.car_owner_work_phone.insert(3, '-').insert(7, '-')  %></b> <em>From: </em> <b> <%= @quarterbreed.car_owner_work_hours%> </b></td>
      </tr>
      <tr>
        <td>  <em>Fax: </em>  <b><%= @quarterbreed.car_owner_fax.insert(3, '-').insert(7, '-')  %></b> <em>From: </em> <b> <%= @quarterbreed.car_owner_fax_hours %></b></td>
      </tr>
      <tr>
        <td><em>How did you find us? </em> <b><%= @quarterbreed.car_owner_find_us %></b><em> -- </em><b> <%= @quarterbreed.car_owner_where_find_us %> </b></td>
      </tr>
    </tbody>
  </table>

<% end %>
</div>


  <div class="col-xs-6 printable-table">
    <h5 class="center"> QUARTERBREED INFO </h5>
    <table class="table table-bordered">
      <tbody>
        <tr>
          <td><em>Year: </em><b> <%= @quarterbreed.jaguar_year%></b></td>
          <td><em>Model: </em><b> <%=@quarterbreed.jaguar_type%></b></td>
        </tr>
        <tr>
          <td> <em>VIN:</em><b> <%=@quarterbreed.jaguar_vin%></b></td>

        </tr>
        <tr>
          <td><em>Month Built: </em><b> <%= @quarterbreed.jaguar_month_built%></b></td>
          <td><em>Year Built: </em><b> <%= @quarterbreed.jugaur_year_built%></b></td>
      </tr>
    </tbody>
  </table>

  <h5 class="center"> ENGINE/MOTOR DETAILS </h5>
  <table class="table table-bordered">
    <tbody>
      <tr>
        <td><em>Engine Number: </em> <b> <%=@quarterbreed.engine_number%></b></td>
        <td><em>Engine Type: </em> <b> <%=@quarterbreed.engine_type%></b></td>
      </tr>
      <tr>
        <td><em>Tire Size: </em> <b> <%=@quarterbreed.tire_size%></b></td>
        <td><em>Tire Radius: </em> <b> <%=@quarterbreed.tire_radius%></b></td>
      </tr>
      <tr>
        <% if @quarterbreed.rear_axle_ratio_other.present? || @quarterbreed.rear_axie_ratio == "Other - fill out in the next box"%>
          <td><em> Rear Axle Ratio:</em> <b> <%=@quarterbreed.rear_axle_ratio_other%></b></td>
        <% else %>
          <td><em>Rear Axle Ratio: </em> <b> <%=@quarterbreed.rear_axie_ratio%></b></td>
        <% end %>
      </tr>
      </tbody>
    </table>
    <h5 class="center"> JAGUAR TRANSMISSION</h5>
    <table class="table table-bordered">
      <tbody>
        <td><em>Transmission: </em> <b><%= @quarterbreed.jaguar_trans%></b></td>
        <% if @quarterbreed.other_speedo.present? || @quarterbreed.speedo_number == "Other - fill out in next box"%>
          <td><em>Speedo Number: </em> <b> <%=@quarterbreed.other_speedo%></b></td>
        <% else %>
          <td><em>Speedo Number: </em> <b> <%=@quarterbreed.speedo_number%></b></td>
        <% end %>
      </tr>
    </tbody>
  </table>

    <p>Comments: <%= @quarterbreed.comments%></p>
  </div>


  <div class="col-xs-6 printable-table">
    <h5 class="center"> BUILDING BLOCKS</h5>
    <table class="table table-bordered">
      <tbody>
        <tr>
          <td class="col-xs-3"><strong>Quarterbreed </strong></td>
          <td class="col-xs-1"><strong> Price</strong> </td>
        </tr>
        <tr>
          <td>V12 T700 Quarterbreed Kit</td>
          <td>$<%= @quarterbreed.quarterbreed_kit %></td>
        </tr>
        <tr>
          <td >T400 Flywheel Core Deposit</td>
          <td >$<%= @quarterbreed.flywheel_core_amt %></td>
        </tr>
        <tr>
          <td >Driveshaft</td>
          <td >$<%= @quarterbreed.driveshaft_amt %></td>
        </tr>
        <tr>
          <td >Credit</td>
          <td > - $<%= @quarterbreed.credit %></td>
        </tr>

          <td >Subtotal (Parts are freight paid 48 states only)</td>
          <td >$<%= @quarterbreed.subtotal %></td>
        </tr>
        <tr>
          <td >Texas Residents 8.25% Sales Tax </td>
          <td >$ <%=@quarterbreed.sales_tex.round(2) %></td>
        </tr>
        <!-- <tr>
          <td>Hawaii or Expedite</td>
          <td>$  @quarterbreed.expedite %></td>
        </tr> -->
        <tr>
          <td>CASHIER'S CHECK = </td>
          <td ><b>$<%= @quarterbreed.total.round(2) %></b></td>
        </tr>
      </tbody>
  </table>
  </div>
  <br>

<div class="col-xs-12">
  <p> Signature _____________________________________________________ Date______________________</p>

</div>
