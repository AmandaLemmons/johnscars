<h3 class="center"> JCI V12 QUARTERBREED KIT ORDER SHEET </h3>
<div class="col-xs-12 printable-table">
  <% if @quarterbreed.same_information == false || nil  %>
  <table class="table table-bordered ">
    <tbody>
      <tr>
        <td>CAR OWNER INFORMATION </td>
        <td>SHOP OR "SHIP TO" INFORMATION  </td>
      </tr>
      <tr>
        <td ><em>Name: </em><b><%= @quarterbreed.car_owner_full_name %></b> </td>
        <td> <em>Name: </em><b><%= @quarterbreed.ship_to_full_name %></b> </td>
      </tr>
      <tr>
        <td><em>Address: </em><b> <%= @quarterbreed.car_owner_address %> <br> <%= @quarterbreed.car_owner_city %>,
          <% if @quarterbreed.car_owner_state == "None" %>
          </b><%= @quarterbreed.car_owner_zip %>   <%= @quarterbreed.car_owner_countr %>
          <% else %>
          <%= @quarterbreed.car_owner_state %>  </b><%= @quarterbreed.car_owner_zip %>,   <%= @quarterbreed.car_owner_countr %></b>
          <% end %>
        </td>
        <td><em>Address: </em><b> <%= @quarterbreed.ship_to_address %> <br> <%= @quarterbreed.ship_to_city %>,
          <% if @quarterbreed.ship_to_state == "None" %>
        </b><%= @quarterbreed.ship_to_zip %>   <%= @quarterbreed.ship_to_countr %>
          <% else %>
          <%= @quarterbreed.ship_to_state %>  </b><%= @quarterbreed.ship_to_zip %>,   <%= @quarterbreed.ship_to_countr %></b>
          <% end %>
        </td>
      </tr>
      <tr>
        <td><em>Email: </em> <b><%= @quarterbreed.car_owner_email %></b></td>
        <td><em>Email: </em> <b><%= @quarterbreed.ship_to_email %></b></td>
      </tr>
      <tr>
        <td><em> Home Phone: </em><b> <%= @quarterbreed.car_owner_home_phone %></b> <em>From: </em><b>  <%= @quarterbreed.car_owner_home_hours %></b> </td>
        <td> <em> Shop Phone: </em><b><%= @quarterbreed.ship_to_phone %></b> </td>
      </tr>
      <tr>
        <td> <em>Work Phone: </em><b><%= @quarterbreed.car_owner_work_phone %></b> <em>From: </em><b> <%= @quarterbreed.car_owner_work_hours%></b> </td>
        <td><em>Fax: </em><b> <%= @quarterbreed.ship_to_fax %></b> </td>
      </tr>
      <tr>
        <td> <em> Fax: </em><b> <%= @quarterbreed.car_owner_fax %> </b> <em>From: </em> <b> <%= @quarterbreed.car_owner_fax_hours %></b></td>
          <td><em>How did you find us? </em><b> <%= @quarterbreed.car_owner_find_us %> </b> <em> -- </em><b> <%= @quarterbreed.car_owner_where_find_us %></b></td>
      </tr>
    </tbody>
  </table>
  <% else %>
  <table class="table table-bordered ">
    <tbody>
      <tr>
        <td>CAR OWNER INFORMATION </td>
      </tr>
      <tr>
        <td><em>Name: </em> <b><%= @quarterbreed.car_owner_full_name %></b> </td>
      </tr>
      <tr>
        <td><em>Address: </em> <b> <%= @quarterbreed.car_owner_address %> <br> <%= @quarterbreed.car_owner_city %>,
          <% if @quarterbreed.car_owner_state == "None" %>
          </b><%= @quarterbreed.car_owner_zip %>   <%= @quarterbreed.car_owner_countr %>
          <% else %>
          <%= @quarterbreed.car_owner_state %>  </b><%= @quarterbreed.car_owner_zip %>,   <%= @quarterbreed.car_owner_countr %></b>
          <% end %>
        </td>
      </tr>
      <tr>
        <td><em>Email: </em> <b><%= @quarterbreed.car_owner_email %></b> </td>
      </tr>
      <tr>
        <td><em>Home Phone: </em> <b>   <%= @quarterbreed.car_owner_home_phone %> <em>From:</em>  <b><%= @quarterbreed.car_owner_home_hours %> </b></td>
      </tr>
      <tr>
        <td> <em>Work Phone: </em> <b><%= @quarterbreed.car_owner_work_phone %></b> <em>From: </em> <b> <%= @quarterbreed.car_owner_work_hours%> </b></td>
      </tr>
      <tr>
        <td>  <em>Fax: </em>  <b><%= @quarterbreed.car_owner_fax %></b> <em>From: </em> <b> <%= @quarterbreed.car_owner_fax_hours %></b></td>
      </tr>
      <tr>
        <td><em>How did you find us? </em> <b><%= @quarterbreed.car_owner_find_us %></b><em> -- </em><b> <%= @quarterbreed.car_owner_where_find_us %> </b></td>
      </tr>
    </tbody>
  </table>

<% end %>
</div>


